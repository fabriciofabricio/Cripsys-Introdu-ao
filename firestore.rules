rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Courses: Publicly readable, writable only by admin (not implemented yet, so read-only for now)
    match /courses/{courseId} {
      allow read: if true; // Or isAuthenticated() if you want to restrict to logged-in users
      allow write: if false;
      
      match /lessons/{lessonId} {
        allow read: if true;
        allow write: if false;
      }
    }

    // User Progress: Users can read/write their own progress
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      match /progress/{courseId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
