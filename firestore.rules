rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Courses: Publicly readable, writable only by admin
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
      
      match /modules/{moduleId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // User Progress: Users can read/write their own progress
    match /users/{userId} {
      allow read, write: if isOwner(userId) || isAdmin(); // Admin can also read/write user data if needed
      
      match /progress/{courseId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }
  }
}
